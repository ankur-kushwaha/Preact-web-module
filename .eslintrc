{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "env": {
    "browser": true,   
    "node": true,      
    "es6": true,       
    "mocha": true      
  },
  "globals": {
    "define": true
  },
  "rules": {
    "object-curly-spacing": 0,
    "no-use-before-define": 0
  }
}